{
  "appId": "com.gto.pokerbot",
  "productName": "GTO Poker Bot",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "server/**/*",
    "shared/**/*",
    "package.json"
  ],
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "extraMetadata": {
    "main": "server/index.ts"
  }
}
