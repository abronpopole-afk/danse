{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5000",
    "distDir": "../dist/public"
  },
  "package": {
    "productName": "GTO Poker Bot",
    "version": "1.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "externalBin": [
        "binaries/server"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "identifier": "com.gto.pokerbot",
      "longDescription": "",
      "publisher": "GTO Poker",
      "resources": [
        "../dist/public/",
        "../digit_weights.json",
        "../rank_weights.json",
        "../suit_weights.json"
      ],
      "shortDescription": "",
      "targets": ["nsis"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "nsis": {
          "oneClick": false,
          "allowToChangeInstallationDirectory": true
        }
      }
    },
    "allowlist": {
      "all": true
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "GTO Poker Bot - Ultra High Performance",
        "width": 1200,
        "decorations": true,
        "transparent": false,
        "visible": true
      }
    ]
  }
}
